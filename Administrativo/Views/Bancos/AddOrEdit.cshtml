@model CrudsApi.Models.Bancos
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Bancos", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))

{
    @Html.HiddenFor(model => model.idBanco)
    <div class="form-group">
        @Html.LabelFor(model => model.descripcion, new { @Class = "control-label" })
        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @Class = "form-control" } })
        @Html.ValidationMessageFor(model => model.descripcion)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.numerocuit, new { @class = "control-label" })
        @Html.EditorFor(model => model.numerocuit, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.numerocuit)
    </div>
    <div class="form-group">
        <input type="submit" value="Aceptar" class="btn btn-primary" />
        <input type="reset" value="Resetear" class="btn btn-warning" />
    </div>
}