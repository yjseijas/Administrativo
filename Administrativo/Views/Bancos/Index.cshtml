@{
    ViewBag.Title = "Bancos";
}

<style>
    .field-validation-error {
        color: #e80c4d;
        font-weight: bold;
    }


    input.input-validation-error {
        border: 1px solid #e80c4d;
    }

</style>
<h2>Bancos</h2>
<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddOrEdit","Bancos")')"><i class="fa fa-plus"></i> Añadir Nuevo Registro</a>
<table id="bancosTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>CUIT</th>
            <th></th>
        </tr>
    </thead>

</table>

<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts {

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>

    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#bancosTable").DataTable({
                "ajax": {
                    "url": "/Bancos/GetBancos",
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": ""
                },
                "columns": [
                    { "data": "descripcion" },
                    { "data": "numerocuit" },
                    {
                        "data": "idBanco", "render": function (data) {
                            return "<a class='btn btn-primary btn-sm' onclick=PopupForm('@Url.Action("AddOrEdit","Bancos")/" + data + "')><i class='fa fa-pencil'></i> Editar</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete("+data+")><i class='fa fa-trash'></i> Eliminar</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"170px"
                    }
                ]
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {

                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Bancos',
                        height: 320,
                        width: 310,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }

                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            alert(form.action);

            if ($(form).valid()) {
                alert(form.action);
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            });

                        }
                    }
                });
            }
            return false;
        }
        function Delete(id) {
            if (confirm('Seguro de eliminar este registro?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Bancos")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();
                            $.notify(data.message,
                            {
                                globalPosition: "top center",
                                className: "success"
                            });
                        }
                        else {
                            $.notify("Error al eliminar Registro",
                            {
                                globalPosition: "top center",
                                className: "error"
                            });
                        }

                    }
                });
            }
        }

    </script>
}

